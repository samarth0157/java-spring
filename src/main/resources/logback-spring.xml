<configuration>
  <property name="PATTERN"
            value="%d{ISO8601} %-5level [%thread] %logger - %msg trace_id=%X{trace_id} span_id=%X{span_id}%n"/>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>${PATTERN}</pattern>
    </encoder>
  </appender>

  <root level="INFO">
    <appender-ref ref="STDOUT"/>
  </root>
</configuration>
